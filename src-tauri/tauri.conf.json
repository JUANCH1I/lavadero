{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lavadero",
  "version": "0.1.0",
  "identifier": "com.lavadero.app",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "lavadero",
        "resizable": true,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/fonts"
    ]
  }
}
